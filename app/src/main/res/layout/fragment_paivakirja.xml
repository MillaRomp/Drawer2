<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pastellinvihr">

    <!-- Himme채 taustakuva -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/juornal"
        android:scaleType="centerCrop"
        android:alpha="0.20" />

    <!-- List View -->
    <LinearLayout
        android:id="@+id/layoutList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:paddingTop="12dp"
        android:visibility="visible">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingBottom="12dp"
            android:layout_marginTop="4dp">
            <LinearLayout
                android:id="@+id/containerNotesList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>

        <Button
            android:id="@+id/btnDeleteSelected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:backgroundTint="@color/pastel_red"
            android:text="Poista valitut"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:visibility="gone"
            android:elevation="4dp" />

        <Button
            android:id="@+id/btnNewNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:backgroundTint="@color/darkslategray"
            android:text="+ Uusi merkint채"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:elevation="4dp" />
    </LinearLayout>

    <!-- Editor View -->
    <LinearLayout
        android:id="@+id/layoutEditor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:paddingTop="12dp"
        android:visibility="gone">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:cardCornerRadius="24dp"
            app:cardBackgroundColor="@color/white"
            app:strokeColor="@color/pastellinvihr"
            app:strokeWidth="3dp"
            app:cardElevation="10dp">

            <EditText
                android:id="@+id/etNote"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:gravity="top"
                android:hint="Kirjoita t채h채n..."
                android:padding="20dp"
                android:textColor="@color/black"
                android:textColorHint="#888888"
                android:textSize="18sp" />
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnBackToList"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:backgroundTint="@color/darkslategray"
                android:text="Takaisin"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:elevation="4dp" />

            <Button
                android:id="@+id/btnSave"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:backgroundTint="@color/darkslategray"
                android:text="Tallenna"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:elevation="4dp" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>